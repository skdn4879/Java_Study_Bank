<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

	<!-- context 태그는 기본으로 존재하지 않아서 하단의 Namespaces에 스키마들이 모여있다. 거기에서 추가해줘야 한다.
	태그가 자동완성이 안된다는 것은 스키마가 없다는 것 -->
	<!-- 배포 시 classes 폴더를 classpath라고 한다. -->
	<context:property-placeholder location="classpath:database/config/database.properties" />

	<!-- 외부라이브러리는 Annotation을 붙일 수 없으므로 xml로 의존성 주입 -->
	<!-- properties의 key값으로 el태그를 이용해 넣는다. 외부에 값이 공개되지 않는다. -->
	<bean class="org.springframework.jdbc.datasource.DriverManagerDataSource" id="dataSource">
		<property name="username" value="${oracle.userName}"></property>
		<property name="password" value="${oracle.password}"></property>
		<property name="url" value="${oracle.url}"></property>
		<property name="driverClassName" value="${oracle.driver}"></property>
	</bean>
	
	<bean class="org.mybatis.spring.SqlSessionFactoryBean" id="sqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource"></property>
		<!-- src/main/resources/database/mappers 폴더의 Mapper.xml로 끝나는 모든 파일 -->
		<property name="mapperLocations" value="classpath:database/mappers/*Mapper.xml"></property>
		<property name="configLocation" value="classpath:database/config/mybatisConfig.xml"></property>
	</bean>
	
	<!-- class속성을 정확히 입력했는데에도 에러표시가 안사라지면 기본생성자가 없다는 뜻 -->
	<bean class="org.mybatis.spring.SqlSessionTemplate" id="sqlSession">
		<constructor-arg name="sqlSessionFactory" ref="sqlSessionFactoryBean"></constructor-arg>
	</bean>

</beans>
